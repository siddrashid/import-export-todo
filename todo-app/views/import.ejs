<% layout('layouts/layout.ejs') %>
<!-- <LayoutSnippet> -->
<div class="container jumbotron">
    <!-- Form to handle single file download request-->
    <form action="/tasks/import/download" method="get">
        <h1 class="mt-3 display-5">Download Import Template for Microsoft ToDo App</h1>
        <div class="input-group mb-3 col-auto">
            <input class="mt-3 btn btn-dark" id="download" type="submit" value="Download">
        </div>
    </form>

    <!-- Form to upload file -->
    <form class="border border-dark p-3" action="/tasks/new" method="post" enctype="multipart/form-data">
    <!-- <form class="border border-dark p-3" action="/tasks/new" method="post"> -->
        <h1 class="mt-3 display-5">Import Tasks</h1>
        <!-- selecting Task List to which upload the tasks -->
        <div class="row mt-3">
            <div class="col-md align-content-centre">
              <div class="form-floating w-25">
                <select name="taskList" class="form-select" id="taskList">
                  <option selected>Select Task List</option>
                  <option value="1">One</option>
                  <option value="2">Two</option>
                  <option value="3">Three</option>
                </select>
                <label for="taskList">Task List</label>
              </div>
            </div>
        </div>

        <div class="input-group mb-3 col-auto">
            <input class="mt-3 btn btn-secondary" name="importFile" type="file" required>
        </div>
        <input class="mt-3 btn btn-dark" type="submit" value="Upload">
    </form>
</div>